String.prototype.replaceAt = function(index, replacement) {
    return this.substr(0, index) + replacement + this.substr(index + replacement.length);
} 

//"teste".replaceAt(2,"z") // troca o caractere do indice 
// tezte

String.prototype.addSpace = function() {
    return this.split('').join(' ')
}// adicionar espaço entre caracteres
//"teste".addSpace()
// t e s t e

palavras = ['abacaxi','manga', 'maca', 'banana', 'uva', 'laranja', 'limao', 'pera', 'kiwi', 'melancia'] //lista de palavras
palavra_escolhida = palavras[Math.floor(Math.random() * palavras.length)] // selecionar uma palavra aleatoriamente 

palavra_escondida = "_".repeat(palavra_escolhida.length) // cria uma string com _ do mesmo tamanho da palavra palavra_escolhida



//palavra_escondida.indexOf('a')// verifica em qual indice da string esta o caracter do parametro
